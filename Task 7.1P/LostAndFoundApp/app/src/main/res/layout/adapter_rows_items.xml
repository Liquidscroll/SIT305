<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_layout"
    android:padding="10dp"
    android:background="@color/light_back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/adapter_ad_type_text"
        android:text="@string/post_type_text"
        android:textColor="@color/dark_text"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_name_text"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_toEndOf="@id/adapter_ad_type_text"
        android:text="@string/default_list_advert_name"
        android:textColor="@color/dark_text"
        android:textSize="20sp"
        android:maxLines="1"
        android:ellipsize="end" />

</RelativeLayout>