<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/deep_brown">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_yellow"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/list_task_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_yellow"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_task_due"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_yellow"
            android:textSize="16sp" />
    </LinearLayout>
    <Button
        android:id="@+id/list_edit_task"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/muted_forest_green"/>
    <Button
        android:id="@+id/list_delete_task"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_delete"
        android:backgroundTint="@color/muted_forest_green"
        android:layout_gravity="center_vertical" />
</LinearLayout>